<% content_for :title, "Podcast Episodes" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-headphones"></i> Podcast Episodes</h1>
  <%= link_to "Add New Episode", new_podcast_episode_path, class: "btn btn-primary" %>
</div>

<% if @podcast_episodes.any? %>
  <div class="row">
    <% @podcast_episodes.each do |podcast_episode| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to podcast_episode.title, podcast_episode, class: "text-decoration-none" %>
            </h5>
            <p class="card-text text-muted small">
              <i class="bi bi-calendar"></i> <%= podcast_episode.publish_date.strftime("%B %d, %Y") %>
              <br>
              <i class="bi bi-clock"></i> <%= podcast_episode.formatted_duration %>
            </p>
            <p class="card-text">
              <%= truncate(podcast_episode.description, length: 120) %>
            </p>
            <% if podcast_episode.tag_list.any? %>
              <div class="mb-2">
                <% podcast_episode.tag_list.each do |tag| %>
                  <span class="badge bg-secondary me-1"><%= tag %></span>
                <% end %>
              </div>
            <% end %>
            <% if podcast_episode.opinion_columns.any? %>
              <p class="text-muted small">
                <i class="bi bi-chat-quote"></i> <%= pluralize(podcast_episode.opinion_columns.count, 'opinion column') %>
              </p>
            <% end %>
          </div>
          <div class="card-footer bg-transparent">
            <div class="btn-group w-100" role="group">
              <%= link_to "Listen", podcast_episode.episode_url, target: "_blank", class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "View", podcast_episode, class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to "Edit", edit_podcast_episode_path(podcast_episode), class: "btn btn-outline-warning btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="bi bi-headphones display-1 text-muted"></i>
    <h3 class="text-muted mt-3">No podcast episodes yet</h3>
    <p class="text-muted">Start by adding your first gossip podcast episode!</p>
    <%= link_to "Add Your First Episode", new_podcast_episode_path, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
